generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // atau "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  inventory Inventory[]
}

model Inventory {
  id          String   @id @default(uuid())
  name        String
  category    String
  quantity    Int
  description String?
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
